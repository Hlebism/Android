<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorDarkBlue"
    tools:context="com.example.klient2.rsa.RSAMAIN">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to RSA apliccation. You may cipher and decipher messages by using public (cipher) or private (decipher) keys.\n\n Please choose an operation"
        android:gravity="center"
        android:textSize="30px"/>



    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CIPHER"
        android:id="@+id/buttoncipher"
        android:clickable="true"
        android:maxWidth="370dp"
        android:minHeight="60dp"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="GENERATE DATA"
        android:id="@+id/buttondata"
        android:clickable="true"
        android:minHeight="60dp"
        android:layout_alignBottom="@+id/buttoncipher"
        android:layout_toLeftOf="@+id/buttoncipher"
        android:layout_toStartOf="@+id/buttoncipher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:focusable="true" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="DECIPHER"
        android:id="@+id/buttondecipher"
        android:clickable="true"
        android:maxWidth="370dp"
        android:minHeight="60dp"
        android:layout_alignBottom="@+id/buttoncipher"
        android:layout_toRightOf="@+id/buttoncipher"
        android:layout_toEndOf="@+id/buttoncipher"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
